<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="0dp"
        android:layout_weight="1">


        <LinearLayout
            android:id="@+id/txvHeadingParent"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:id="@+id/txvHeading"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:enabled="false"
                android:gravity="left|center"
                android:paddingLeft="10dp"
                android:text="Heading"
                android:textSize="25sp"
                tools:ignore="HardcodedText,LabelFor,RtlSymmetry" />

            <TextView
                android:id="@+id/txvGrnNo"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_gravity="left"
                android:enabled="false"
                android:gravity="right|center"
                android:paddingRight="10dp"
                android:text="GRN NO:"
                android:textSize="25sp"
                tools:ignore="HardcodedText,LabelFor,RtlSymmetry" />
        </LinearLayout>

        <ImageView
            android:id="@+id/imageDisplay"
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:layout_gravity="center"
            android:backgroundTint="@color/kiabzaPrimary"
            android:src="@drawable/ic_wallpaper_black_48dp"
            tools:ignore="ContentDescription"
            tools:targetApi="lollipop"
            android:layout_below="@+id/txvHeadingParent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@+id/imageDisplay"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/imageViewFirstS"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginLeft="30dp"
                android:gravity="center">

                <TextView
                    android:layout_width="160dp"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:text="Image 1"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText" />

                <RelativeLayout
                    android:id="@+id/imageViewFirstBG"
                    android:layout_width="160dp"
                    android:layout_height="160dp"
                    android:layout_marginTop="40dp"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/imageViewFirst"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_center_focus_weak_black_48dp"
                        tools:ignore="ContentDescription" />
                </RelativeLayout>
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/imageViewSecondS"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginLeft="20dp"
                android:gravity="center">

                <TextView
                    android:layout_width="160dp"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:text="Image 2"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText" />

                <RelativeLayout
                    android:id="@+id/imageViewSecondBG"
                    android:layout_width="160dp"
                    android:layout_height="160dp"
                    android:layout_marginTop="40dp"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/imageViewSecond"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:src="@drawable/ic_center_focus_weak_black_48dp"
                        tools:ignore="ContentDescription" />
                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200px"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/linearLayout"
            tools:ignore="PxUsage,UselessLeaf">

        </RelativeLayout>
    </RelativeLayout>


</LinearLayout>